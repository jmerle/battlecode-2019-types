{
  "name": "battlecode-2019-types",
  "version": "1.1.0",
  "description": "Battlecode 2019 TypeScript declarations",
  "repository": "https://github.com/jmerle/battlecode-2019-types",
  "author": "Jasper van Merle",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "tsc",
    "lint": "tslint -p tsconfig.json -c tslint.json -t stylish",
    "docs": "yarn docs:prepare && yarn docs:build",
    "docs:prepare": "cp dist/battlecode.d.ts dist/battlecode.ts",
    "docs:build": "typedoc --out docs --mode file dist/battlecode.ts"
  },
  "devDependencies": {
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "tslint": "^5.12.0",
    "tslint-config-prettier": "^1.17.0",
    "typedoc": "^0.14.1",
    "typescript": "^3.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "yarn lint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{json,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  }
}
